<Page x:Class="Transliteration.Views.SignUpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Transliteration.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SignUpView">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Margin= "200,20,200,0"
            Content="{Binding LoginText}"
            HorizontalAlignment="Left"
            VerticalContentAlignment="Center"></Label>
        <TextBox
            Grid.Row="1" 
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,0,200,5"
            Height= "30"
            Text= "{Binding Login,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            VerticalContentAlignment= "Center" ></TextBox>
        <Label
            Grid.Row= "2"
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,20,200,0"
            Content= "{Binding PasswordText}"
            HorizontalAlignment= "Left"
            VerticalContentAlignment= "Center" ></Label>
        <PasswordBox
            Grid.Row= "3"
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,0,200,5"
            x:Name= "pwdBox"
            Height= "30"
            VerticalContentAlignment= "Center" ></PasswordBox>
        <Label
            Grid.Row="4" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Margin= "200,20,200,0"
            Content="{Binding FirstNameText}"
            HorizontalAlignment="Left"
            VerticalContentAlignment="Center"></Label>
        <TextBox
            Grid.Row="5" 
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,0,200,5"
            Height= "30"
            Text= "{Binding FirstName,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            VerticalContentAlignment= "Center" ></TextBox>
        <Label
            Grid.Row="6" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Margin= "200,20,200,0"
            Content="{Binding LastNameText}"
            HorizontalAlignment="Left"
            VerticalContentAlignment="Center"></Label>
        <TextBox
            Grid.Row="7" 
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,0,200,5"
            Height= "30"
            Text= "{Binding LastName,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            VerticalContentAlignment= "Center" ></TextBox>
        <Label
            Grid.Row="8" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Margin= "200,20,200,0"
            Content="{Binding EmailText}"
            HorizontalAlignment="Left"
            VerticalContentAlignment="Center"></Label>
        <TextBox
            Grid.Row="9" 
            Grid.Column= "0"
            Grid.ColumnSpan="2"
            Margin= "200,0,200,5"
            Height= "30"
            Text= "{Binding Email,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            VerticalContentAlignment= "Center" ></TextBox>
        <Button 
            Grid.Row="10"
            Grid.Column="0"
            Content="Sign up"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="75"
            Command="{Binding SignUpCommand}"
            CommandParameter="{Binding ElementName=pwdBox}" />
        <Button 
            Grid.Row="10"
            Grid.Column="1"
            Content="Close"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="75"
            Command="{Binding CloseCommand}"/>
        <Button
            Grid.Row="11"
            Grid.Column="0"
            Content="Back to Sign In"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="225"
            Command="{Binding SignInCommand}" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
